    On Error Resume Next: ws.Shapes("btnEmailRemaining").Delete: On Error GoTo 0
    With ws.Buttons.Add(ws.Range("R6").Left, ws.Range("R6").Top, ws.Range("R6:T6").Width, ws.Range("R6:T6").Height + 5)
        .Caption = "Email Remaining by Client"
        .Name = "btnEmailRemaining"
        .OnAction = "EmailRemainingByClient"
    End With
End Sub

Sub EmailRemainingByClient()
    Dim ws As Worksheet
    Dim dict As Object: Set dict = CreateObject("Scripting.Dictionary")

    For Each ws In Sheets
        If ws.Name <> "MainData" And ws.Name <> "Client Data" And ws.Name <> "EOD Chased" Then
            Dim lastRow As Long: lastRow = ws.Cells(ws.Rows.Count, "A").End(xlUp).Row
            Dim i As Long
            For i = 2 To lastRow
                If LCase(Trim(ws.Cells(i, 12).Value)) = "yes" Or LCase(Trim(ws.Cells(i, 12).Value)) = "y" Then
                    Dim c As String: c = ws.Cells(i, 16).Value
                    If c <> "" Then
                        If Not dict.exists(c) Then Set dict(c) = New Collection
                        dict(c).Add ws.Rows(i)
                    End If
                End If
            Next i
        End If
    Next ws

    Dim olApp As Object: Set olApp = CreateObject("Outlook.Application")
    Dim k As Variant

    For Each k In dict.keys
        Dim mail As Object: Set mail = olApp.CreateItem(0)
        Dim body As String: body = "<table border=1><tr>"

        Dim i As Long
        For i = 1 To 11
            body = body & "<th>" & dict(k)(1).Parent.Cells(1, i).Text & "</th>"
        Next i
        body = body & "</tr>"

        Dim rw As Range
        For Each rw In dict(k)
            body = body & "<tr>"
            For i = 1 To 11
                body = body & "<td>" & rw.Cells(1, i).Text & "</td>"
            Next i
            body = body & "</tr>"
        Next rw

        body = body & "</table><br><br>Thank you,"

        With mail
            .Subject = k & " | Missing Allocations | Barclays | " & Format(Date, "dd-mmm-yyyy")
            .HTMLBody = body
            .Display
        End With
    Next k

End Sub
